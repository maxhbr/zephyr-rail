/ {
	stepper_motor: stepper_motor {
		compatible = "simple-stepper";
		status = "okay";
        step-gpios = <&gpio0 21 GPIO_ACTIVE_HIGH>; /* GPIO21 */
        dir-gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>;  /* GPIO22 */
        en-gpios = <&gpio0 23 GPIO_ACTIVE_LOW>;   /* GPIO23 */
		step-width-ns = <2500>;
		micro-step-res = <256>;
		invert-pins;
	};
};
