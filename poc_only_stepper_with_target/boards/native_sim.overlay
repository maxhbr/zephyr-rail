/ {
	stepper_motor: stepper_motor {
		compatible = "ti,drv84xx";
		status = "okay";
		/* Mock pins for native simulation */
		step-gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
		dir-gpios = <&gpio0 1 GPIO_ACTIVE_HIGH>;
		en-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
		micro-step-res = <16>;
	};
};
